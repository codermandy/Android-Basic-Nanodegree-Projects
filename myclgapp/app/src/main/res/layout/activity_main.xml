<RelativeLayout xmlns:app="http://schemas.android.com/apk/lib/"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
        <ImageView
            android:id="@+id/college_image_view"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:alpha=".4"
            android:scaleType="centerCrop"
            android:src="@drawable/project_image" />

        <TextView
            android:id="@+id/name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Government Engineering College Bikaner"
            android:textAlignment="center"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/description_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/college_image_view"
            android:text="Govt Engineering College Bikaner was founded in 1999 and offers  courses like B. Tech, MBA, MCA, M. Sc. (CS), BBA, BCA Most of the faculty members have completed their degrees from IIT/ NIT/BITS Pilani etc.College has facilities like hostels, bank, dispensary, fleet of buses, WiFi campus, canteen, communication lab etc.he campus interviews are conducted by blue chip companies like IBM, NBC, Kirloskar, IDBI, Simplex Infrastructure etc." />

        <ImageView
            android:id="@+id/location_image_view"
            android:layout_width="36dp"
            android:layout_height="40dp"
            android:layout_above="@id/contact_image_view"
            android:src="@drawable/location_image" />

        <TextView
            android:id="@+id/location_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/contact_text_view"
            android:layout_toRightOf="@id/location_text_view"
            android:text="Address:KARNI INDUSTRIAL AREA,PUGAL ROAD BIKANER (RAJASTHAN) PIN CODE 334004"

            />

        <ImageView
            android:id="@+id/contact_image_view"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/contact_image"

            />

        <TextView
            android:id="@+id/contact_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/contact_image_view"
            android:text="Contact: +91-0151 2253999,2253404 FAX : +91-0151 2252919 Email: principal@ecb.ac.in, gecb.principal@gmail.com  Website: www.ecb.ac.in"


            />
</RelativeLayout>



